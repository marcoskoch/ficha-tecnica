@model FichaTecnica.Models.ComentarioModel

<form action="/Membro/AdicionarComentario" method="POST" accept-charset="utf-8">

    @Html.HiddenFor(m => m.IdMembro);

    <div class="form-group">
        @Html.LabelFor(c => c.Assunto, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(c => c.Assunto, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Assunto)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Texto, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(c => c.Texto, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Texto)
        </div>
    </div>
    <div class="form-group">
        <label>Tipo:</label>
        <select class="form-control" name="Tipo">
            <option value="0">Positivo</option>
            <option value="2">Negativo</option>
        </select>
    </div>

    <div class="form-group">
        <label>Projeto:</label>
        <select class="form-control" name="IdProjeto">
            <option value="1">Projeto Renner</option>
            <option value="2">Projeto Renner</option>
        </select>
    </div>
    <div class="form-group">
        <div class="col-sm-12">
            <button type="submit" class="btn btn-primary">Adicionar</button>
        </div>
    </div>
</form>


