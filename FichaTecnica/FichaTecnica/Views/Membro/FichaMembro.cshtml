@section Scripts {
    <script type="text/javascript">

        var model = @Html.Raw(Json.Encode(Model));
        var commitList = [];

        model.LinksGithub.Links.forEach(function(l) {
            $.get(model.LinksGithub.URLBaseAPI + l.URL + 'commits')
                .done(function (response) {
                    response.forEach(function (i) {
                        commitList.push({ sha: i.sha, date: new Date(i.commit.author.date).getTime(), message: i.commit.message })
                    })
                })
        })

        //TODO: refactor meio alternativo sem setTimeout

        setTimeout(function(){
            commitList.sort(function (left, right) { return left.date > right.date })
            commitList = commitList.slice(0, 3);

            commitList.forEach(function(commit) {
                $('#commits')
                    .append($('<div class="bloco-commit">')
                        .append($('<p>')
                            .append($('<a>').html(commit.sha.slice(0, 7)).attr('href', model.URLBase + '/commit/' + commit.sha))
                            .append($('<p>').html(commit.message)))
                )
            }) }, 1000);

    </script>
}